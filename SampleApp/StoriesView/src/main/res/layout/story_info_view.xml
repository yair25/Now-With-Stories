<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/storyUserView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/storyProfilePicIV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="8dp"
                android:src="@drawable/ic_person_black_24dp"
                android:transitionName="sharedProfilePicTransition"
                android:contentDescription="" />

            <TextView
                android:id="@+id/storyUsernameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="@string/story_username"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:transitionName="sharedUserNameTransition" />

        </LinearLayout>

        <TextView
            android:id="@+id/storyTimeV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="8dp"
            android:text="@string/story_time"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#D3D3D3"
            android:maxLines="1"/>
    </LinearLayout>

</LinearLayout>